<odoo>
    <data>
        <record id="view_api_request_form" model="ir.ui.view">
            <field name="name">api.request.form</field>
            <field name="model">api.request</field>
            <field name="arch" type="xml">
                <form string="API Request">
                    <header>
                        <button name="button_send_request" string="Send Request" type="object" class="btn-primary"/>
                        <button name="ask_question_button" string="search document" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="model"/>
                            <field name="prompt"/>
                            <field name="file"/>
                            <field name="file_name"/>
                            <field name="document_url"/>
                            <field name="image" widget="image" options="{'size': [150, 150]}"/>
                            <field name="response" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_api_request_tree" model="ir.ui.view">
            <field name="name">api.request.tree</field>
            <field name="model">api.request</field>
            <field name="arch" type="xml">
                <tree string="API Requests">
                    <field name="model"/>
                    <field name="prompt"/>
                    <field name="response"/>
                </tree>
            </field>
        </record>

        <menuitem id="menu_api_request_root"
                  name="TEOS"
                  web_icon="teos,static/description/icon.png"
                  sequence="0"/>

        <menuitem id="menu_api_request"
                  name="TEOS"
                  parent="menu_api_request_root"
                  action="action_api_request"
                  sequence="10"/>

        <record id="action_api_request" model="ir.actions.act_window">
            <field name="name">TEOS</field>
            <field name="res_model">api.request</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
