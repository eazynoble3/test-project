<odoo>
    <record id="view_llm_config_form" model="ir.ui.view">
        <field name="name">llm.config.form</field>
        <field name="model">llm.config</field>
        <field name="arch" type="xml">
            <form string="LLM Configuration">
                <header>
                    <button name="test_llm_config" string="Test Configuration" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="api_url"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="LLM Ollama">
                            <group>
                                <field name="base_url"/>
                                <field name="model"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_llm_config_tree" model="ir.ui.view">
        <field name="name">llm.config.tree</field>
        <field name="model">llm.config</field>
        <field name="arch" type="xml">
            <tree string="LLM Configurations">
                <field name="base_url"/>
                <field name="model"/>
            </tree>
        </field>
    </record>

    <record id="action_llm_config" model="ir.actions.act_window">
        <field name="name">LLM Configurations</field>
        <field name="res_model">llm.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Alfresco Settings yet
            </p>
        </field>
    </record>

    <menuitem id="menu_llm_config" name="LLM Configuration" parent="base.menu_administration" sequence="1"/>
    <menuitem id="menu_llm_config_list" name="LLM Configurations" parent="menu_llm_config" action="action_llm_config"/>
</odoo>
